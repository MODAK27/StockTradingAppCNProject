// “How to run or debug stuff”
// And they connect through:
// "preLaunchTask": "Build All"
// in `launch.json under each named configuration
{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug serverM",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/serverM",
        "args": ["start"],
        "preLaunchTask": "Build All",
        "cwd": "${workspaceFolder}",
        "terminal": "integrated"
      },
      {
        "name": "Debug serverA",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/serverA",
        "args": ["start"],
        "preLaunchTask": "Build All",
        "cwd": "${workspaceFolder}",
        "terminal": "integrated"
      },
      {
        "name": "Debug serverP",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/serverP",
        "args": ["start"],
        "preLaunchTask": "Build All",
        "cwd": "${workspaceFolder}",
        "terminal": "integrated"
      },
      {
        "name": "Debug serverQ",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/serverQ",
        "args": ["start"],
        "preLaunchTask": "Build All",
        "cwd": "${workspaceFolder}",
        "terminal": "integrated"
      },
      {
        "name": "Debug client",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/client",
        "args": ["start"],
        "preLaunchTask": "Build All",
        "cwd": "${workspaceFolder}",
        "terminal": "integrated"
      }
    ],
    "compounds": [
      {
        "name": "Debug All Servers",
        "configurations": [
          "Debug serverM",
          "Debug serverA",
          "Debug serverP",
          "Debug serverQ"
        ]
      },
      {
        "name": "Debug Everything",
        "configurations": [
          "Debug serverM",
          "Debug serverA",
          "Debug serverP",
          "Debug serverQ",
          "Debug client"
        ]
      }
    ]
  }
  