// tasks.json = “How to build stuff”
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build All",
			"type": "shell",
			"command": "make all",
			"group": { "kind": "build", "isDefault": true },
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "Clean & Build",
			"type": "shell",
			"command": "make clean && make all",
			"group": { "kind": "build", "isDefault": true },
			"presentation": {
			  "reveal": "always",
			  "panel": "shared"
			},
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "Build All (force)",
			"type": "shell",
			"command": "make",
			"args": ["-B", "all"],
			"group": { "kind": "build", "isDefault": true },
			"presentation": {
			  "reveal": "always",
			  "panel": "shared"
			},
			"problemMatcher": ["$gcc"]
		}
	]
}